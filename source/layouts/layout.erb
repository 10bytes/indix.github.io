<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta content="IE=edge" http-equiv="X-UA-Compatible">
    <meta content="width=device-width,initial-scale=1.0,minimum-scale=1.0,maximum-scale=1.0,user-scalable=no" name="viewport">

    <title><%= current_page.data.title || "Indix OSS" %></title>
    <%= favicon_tag 'favicon-32x32.png' %>
    <link href='//fonts.googleapis.com/css?family=Lato:300,400' rel='stylesheet' type='text/css'>
    <%= stylesheet_link_tag bootstrap_css %>
    <%= stylesheet_link_tag bootstrap_theme_css %>
    <%= stylesheet_link_tag font_awesome_css %>
    <%= stylesheet_link_tag :site %>
    <%= javascript_include_tag :all %>
  </head>

  <body class="<%= page_classes %>">
    <% navbar inverted: true do %>
      <% vertical do %>
        <%= image_tag("indix-logo.png", width: "60px", height: "60px") %>
        <span class="image-side">Engineering</span>
      <% end %>
    <% end %>
    <%= yield %>
    <footer class="footer navbar-inverse">
      <div class="container text-center">
        <p class="navbar-text">Made with <i class="fa fa-heart"></i> by Indix</p>
      </div>
    </footer>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
  </body>
</html>
